@model ProiectIS2.Models.Comanda

@{
    ViewData["Title"] = "Plasează Comanda";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">Ce doriți să comandați?</h2>
                </div>
                <div class="card-body p-5 text-center">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label class="form-label h5 mb-3">Alegeți din meniul nostru:</label>
                            <select name="ProdusId" class="form-select form-select-lg border-primary" asp-items="ViewBag.ListaProduse" required>
                                <option value="">-- Selectați un produs --</option>
                            </select>
                        </div>

                        <p class="text-muted small">
                            * Data, numărul de ordine și totalul vor fi generate automat la confirmare.
                        </p>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-shopping-cart"></i> Finalizează Comanda
                            </button>
                            <a asp-action="Index" class="btn btn-link text-secondary">Vezi toate comenzile</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>